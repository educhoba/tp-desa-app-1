<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        style="@style/BottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MUNI"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"/>

        <ImageView
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/usermain"
            android:layout_gravity="end"
            android:padding="10dp"/>
    </com.google.android.material.bottomnavigation.BottomNavigationView>
    <LinearLayout
        android:id="@+id/opciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/bottom_navigation"
        android:layout_marginTop="50dp"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btncomercios"
            app:layout_constraintTop_toBottomOf="@+id/bottom_navigation"
            android:layout_width="210dp"
            android:layout_height="60dp"
            android:text="Comercios"
            android:backgroundTint="@color/bluelight"
            android:textColor="@color/black"
            />
        <Button
            android:id="@+id/btnprofesionales"
            app:layout_constraintTop_toBottomOf="@+id/bottom_navigation"
            android:layout_width="210dp"
            android:layout_height="60dp"
            android:text="Profesionales"
            android:backgroundTint="@color/bluelight"
            android:textColor="@color/black"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300px"
        app:layout_constraintTop_toBottomOf="@+id/opciones">

        <Spinner
            android:id="@+id/rubroSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>


    <!-- Comercios-->
    <LinearLayout
        android:id="@+id/comercios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_marginTop="400px">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="comercios"
            android:textSize="40dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"/>




    </LinearLayout>

    <!-- Profesionales-->
    <LinearLayout
        android:id="@+id/profesionales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="400px">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROFESIONALES"
            android:textSize="40dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:id="@+id/detalle"
        android:layout_marginTop="600px">

        <TextView
            android:id="@+id/textViewNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Nombre del Comercio"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/textViewDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Dirección:"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/textViewHorario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Horario:"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/textViewTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Teléfono:"
            android:paddingBottom="4dp"/>
        <TextView
            android:id="@+id/textViewRubro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Rubro:"
            android:paddingBottom="4dp"/>
        <TextView
            android:id="@+id/textViewDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Descripción:"
            android:paddingBottom="4dp"/>

    </LinearLayout>



</RelativeLayout>